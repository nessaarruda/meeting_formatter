{
  "manifest_version": 2,
  "name": "Calendar Chrome Extension",
  "description": "This is a chrome extension for formatting google calendar invites",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
      "default_title": "Click me",
      "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "permissions": [
      "tabs",
      "storage",
      "http://*/*",
      "https://*/*"
  ]
}
